<div class="container" style="margin-left: 10px">
  <h2>Ebooks</h2>

  <div class="container">

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Action</th>
        <th>ID</th>
        <th>Titel</th>
        <th>Autor</th>
        <th>Erscheinungsdatum</th>
        <th>Auflage</th>
